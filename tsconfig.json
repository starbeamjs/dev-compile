{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "node_modules/.cache/tmp/tsc",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist/**/*"]
}
